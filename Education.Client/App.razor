<CascadingAuthenticationState>
    <Router AppAssembly="@typeof(App).Assembly">
        <Found Context="routeData">
            <AuthorizeRouteView RouteData="@routeData" DefaultLayout="@typeof(MainLayout)">
                <NotAuthorized>
                    @if (!context.User.Identity?.IsAuthenticated ?? false)
                    {
                        <RedirectTo Url="@Links.Root"/>
                    }
                    else
                    {
                        <p>You are not authorized to access this resource.</p>
                    }
                </NotAuthorized>
                <Authorizing>
                    <div class="d-flex justify-content-center app-loader flex-column">
                        <div class="spinner-border" role="status">
                            <span class="sr-only"></span>
                        </div>
                    </div>
                </Authorizing>
            </AuthorizeRouteView>
        </Found>
        <NotFound>
            <LayoutView Layout="@typeof(MainLayout)">
                <ErrorContainer Error="@(Error.Create(L["Error:NotFound"], string.Empty, 404))"/>
            </LayoutView>
        </NotFound>
    </Router>
</CascadingAuthenticationState>

@code
{
    [Inject]
    private IStringLocalizer<App> L { get; set; } = default!;
    
    [Inject]
    private TopicContentFormatService TopicContentFormatService { get; set; } = default!;

    [Inject]
    private ThemeService ThemeService { get; set; } = default!;

    [Inject]
    private SidebarService SidebarService { get; set; } = default!;

    protected override async Task OnInitializedAsync()
    {
        await TopicContentFormatService.InitAsync();
        await ThemeService.InitAsync();
        await SidebarService.InitAsync();
    }
}
