<div class="container">
    <div class="header">
        <h2>@Title</h2>
    </div>
    
    <div class="grid">
        @ChildContent
    </div>
</div>

@code {

    [Parameter]
    public string Title { get; set; } = string.Empty;
    
    [Parameter]
    public RenderFragment ChildContent { get; set; } = default!;

}
