@using Education.Client.Gateways.History

<div class="image @Class" style="background-image: url('@SubjectType.History.GetStatic().Image')">
    <div class="cover">
        <LoadingButton Size="Size.Large" OnClick="@OnClick" IsLoading="@_isLoading" Text="@L["Topic:Random"]"/>
    </div>
</div>

@code {

    [Inject]
    private IStringLocalizer<App> L { get; set; } = default!;

    [Inject]
    private IHistoryClient Client { get; set; } = default!;

    [Inject]
    private NavigationManager Navigation { get; set; } = default!;

    [Parameter]
    public string? Class { get; set; }

    private bool _isLoading;

    private async Task OnClick()
    {
        if (_isLoading)
            return;

        _isLoading = true;
        var result = await Client.Topic.GetRandomAsync();
        if (result.Status == ResponseStatus.Success)
            Navigation.NavigateTo(Links.History.TopicById(result.Data.Id));

        _isLoading = false;
    }

}
