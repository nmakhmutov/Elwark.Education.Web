<MudBreadcrumbs Items="@Items" Class="@Class">
    <ItemTemplate Context="item">
        <MudLink Disabled="@item.Disabled" Href="@item.Href">
            @if (!string.IsNullOrEmpty(item.Icon))
            {
                <MudIcon Icon="@item.Icon" Size="Size.Small"/>
            }
            @item.Text
        </MudLink>
    </ItemTemplate>
</MudBreadcrumbs>

@code {

    [Parameter, EditorRequired]
    public List<BreadcrumbItem> Items { get; set; } = new();

    [Parameter]
    public string? Class { get; set; }

    [Parameter]
    public string Separator { get; set; } = Icons.Filled.ChevronRight;

}
