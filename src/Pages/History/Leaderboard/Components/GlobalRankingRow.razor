<MudPaper Elevation="0" Class="@Class">
    <section class="grid">
        <div class="position">
            <MudText Typo="Typo.subtitle2" Align="Align.Center">
                @Position
            </MudText>
        </div>
        <div class="name">
            <MudAvatar Image="@Image" Alt="@Name" Class="mr-3"/>
            <MudText Typo="Typo.subtitle1">@Name</MudText>
        </div>
        <div class="level">
            <MudIcon Class="mr-3" Style="@("color: " + Colors.Grey.Lighten1)" Icon="@Icons.Material.Outlined.BarChart"/>
            <MudText Typo="Typo.h6">
                @Level
            </MudText>
        </div>
        <div class="experience">
            <MudIcon Class="mr-3" Size="Size.Small" Style="color: #FFCA28" Icon="@EducationIcons.Experience"/>
            <HumanReadableText Value="@Experience" Typo="Typo.h6"/>
        </div>
    </section>
</MudPaper>

@code {

    [Parameter]
    public string? Class { get; set; }

    [Parameter, EditorRequired]
    public uint Position { get; set; }

    [Parameter, EditorRequired]
    public string Name { get; set; } = string.Empty;

    [Parameter, EditorRequired]
    public string Image { get; set; } = string.Empty;

    [Parameter, EditorRequired]
    public uint Level { get; set; }

    [Parameter, EditorRequired]
    public ulong Experience { get; set; }

}
