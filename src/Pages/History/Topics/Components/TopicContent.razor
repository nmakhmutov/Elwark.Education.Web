@using Education.Web.Services.Settings
@implements IDisposable

<article class="@Class mud-paper pa-3 pa-sm-6">
    <EduMarkdown Content="@Content" Style="@Settings.TextStyles"/>
</article>

@code {

    [Inject]
    private IStringLocalizer<App> L { get; set; } = default!;

    [Inject]
    private TopicContentSettings Settings { get; set; } = default!;

    [Parameter]
    public string? Class { get; set; }

    [Parameter, EditorRequired]
    public string Content { get; set; } = string.Empty;

    protected override void OnInitialized() =>
        Settings.OnChange += StateHasChanged;

    public void Dispose() => 
        Settings.OnChange -= StateHasChanged;

}