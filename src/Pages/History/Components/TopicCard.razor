@using Education.Web.Services.History
@using Education.Web.Services.Model.Content
@using MudBlazor.Utilities

<section class="@_class">
    <header class="card-header">
        <a href="@HistoryUrl.Content.Topic(Id)">
            <img src="@Image" alt="@Title" loading="lazy"/>
        </a>
        <div class="rating-container">
            <TopicRating Rating="@Rating" ShowTooltip/>
        </div>
    </header>

    <article class="d-flex flex-column pa-3">
        <div class="mb-3">
            <MudLink Href="@HistoryUrl.Content.Topic(Id)" Typo="Typo.h6">
                @Title
            </MudLink>
        </div>

        <MudText Class="mb-3" Typo="Typo.body2">
            @Overview
        </MudText>

        <div class="flex-grow-1"></div>

        <div class="d-flex justify-space-between">
            <MudChip Class="mx-0" Label Size="Size.Small" Color="Color.Primary" Link="@HistoryUrl.Content.Epoch(Epoch)">
                @L[$"Epoch:{Epoch.ToFastString()}"]
            </MudChip>
            <MudButton
                Variant="Variant.Outlined"
                Color="Color.Primary"
                Href="@HistoryUrl.Content.Topic(Id)">
                @L["Button:Read"]
            </MudButton>
        </div>
    </article>
</section>

@code {

    private string _class = string.Empty;

    [Inject]
    private IStringLocalizer<App> L { get; set; } = default!;

    [Parameter]
    public string? Class { get; set; }

    [Parameter, EditorRequired]
    public string Id { get; set; } = string.Empty;

    [Parameter, EditorRequired]
    public EpochType Epoch { get; set; }

    [Parameter, EditorRequired]
    public string Image { get; set; } = string.Empty;

    [Parameter, EditorRequired]
    public string Title { get; set; } = string.Empty;

    [Parameter]
    public string? Overview { get; set; }

    [Parameter, EditorRequired]
    public ContentRatingModel Rating { get; set; } = default!;

    [Parameter]
    public bool Horizontal { get; set; }

    protected override void OnParametersSet() => _class = CssBuilder.Default("card")
        .AddClass("horizontal", Horizontal)
        .AddClass(Class, !string.IsNullOrEmpty(Class))
        .Build();

}