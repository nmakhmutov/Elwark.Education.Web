@using Education.Web.Services.History

<div class="grid @Class">
    <div class="image">
        <img src="@Topic.ThumbnailUrl" alt="@Topic.Title" loading="lazy"/>
    </div>
    <article class="text">
        <MudText Typo="Typo.subtitle1" Color="Color.Default" Class="mb-12">
            <em>
                From today's featured topic
            </em>
        </MudText>

        <MudText Typo="Typo.h2" Color="Color.Inherit" Class="mb-3">
            @Topic.Title
        </MudText>

        <TopicRating Rating="@Topic.Rating" ShowDetails Class="d-flex align-center my-3"/>

        <MudText Typo="Typo.subtitle1" Class="mb-6">
            @Topic.Overview
        </MudText>

        <MudButton
            DisableElevation
            Variant="Variant.Filled" 
            Color="Color.Primary"
            Link="@HistoryUrl.Content.Topic(Topic.Id)">
            @L["Button:Read"]
        </MudButton>
    </article>
</div>

@code {

    [Inject]
    private IStringLocalizer<App> L { get; set; } = default!;

    [Parameter]
    public TopicOverviewModel Topic { get; set; } = default!;

    [Parameter]
    public string? Class { get; set; }

}
