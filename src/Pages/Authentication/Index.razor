@page "/authentication/{action}"
@layout MainLayout

<EduPage ShowFooter>
    <RemoteAuthenticatorView Action="@Action">
        <LoggingIn>
            <PageSpinner/>
        </LoggingIn>
        <CompletingLoggingIn>
            <PageSpinner/>
        </CompletingLoggingIn>
        <LogOut>
            <PageSpinner/>
        </LogOut>
    </RemoteAuthenticatorView>
</EduPage>

@code{

    [Parameter]
    public string? Action { get; set; }

}
