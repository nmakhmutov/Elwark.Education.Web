<MudBreadcrumbs Items="@Items" Class="@Class">
    <SeparatorTemplate>
        <div class="d-flex">
            <MudIcon Icon="@Separator" Size="@SeparatorSize" Class="mud-text-secondary"/>
        </div>
    </SeparatorTemplate>
    <ItemTemplate Context="item">
        <MudLink Typo="Typo" Disabled="@item.Disabled" Href="@item.Href">
            @if (!string.IsNullOrEmpty(item.Icon))
            {
                <MudIcon Icon="@item.Icon" Size="@SeparatorSize"/>
            }
            @item.Text
        </MudLink>
    </ItemTemplate>
</MudBreadcrumbs>

@code {

    [Parameter, EditorRequired]
    public List<BreadcrumbItem> Items { get; set; } = new();

    [Parameter]
    public string? Class { get; set; }

    [Parameter]
    public string Separator { get; set; } = Icons.Outlined.ChevronRight;

    [Parameter]
    public Typo Typo { get; set; } = Typo.body1;

    [Parameter]
    public Size SeparatorSize { get; set; } = Size.Small;

}