@if (ShowTooltip)
{
    <MudTooltip Text="@L["NumberOfQuizzes_Total_Title"]">
        @Chip
    </MudTooltip>
}
else
{
    @Chip
}

@code {

    private RenderFragment Chip =>
        @<MudChip
             Class="ma-0"
             Color="Color.Primary"
             Variant="Variant.Outlined"
             Icon="@EduIcons.Quiz"
             Text="@Quizzes.ToMetric("G")"
             Link="@Href"/>;

    [Inject]
    private IStringLocalizer<App> L { get; set; } = default!;

    [Parameter, EditorRequired]
    public uint Quizzes { get; set; }

    [Parameter]
    public bool ShowTooltip { get; set; }

    [Parameter]
    public string? Href { get; set; }

}