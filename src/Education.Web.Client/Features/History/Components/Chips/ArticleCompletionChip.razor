@if (ShowTooltip)
{
    <MudTooltip Text="@L["Shared_ArticleLearningStatus"]">
        @Chip
    </MudTooltip>
}
else
{
    @Chip
}

@code {

    private Color _color;
    private string? _icon;
    private string? _text;

    private RenderFragment Chip =>
        @<MudChip
             Class="ma-0"
             Variant="Variant.Outlined"
             Size="@Size"
             Color="_color"
             Icon="@_icon"
             Text="@_text"
             Href="@(IsCompleted is null ? null : Href)"/>;

    [Inject]
    public IStringLocalizer<App> L { get; set; } = default!;

    [Parameter, EditorRequired]
    public bool? IsCompleted { get; set; }

    [Parameter]
    public string? Href { get; set; }

    [Parameter]
    public bool ShowTooltip { get; set; }

    [Parameter]
    public Size Size { get; set; } = Size.Medium;

    protected override void OnParametersSet() =>
        (_color, _icon, _text) = IsCompleted switch {
            true => (Color.Success, Icons.Material.Outlined.CheckCircle, L["Shared_ArticleLearningStatusCompleted"]),
            false => (Color.Warning, Icons.Material.Outlined.ModeStandby, L["Shared_ArticleLearningStatusIncompleted"]),
            null => (Color.Default, Icons.Material.Outlined.RadioButtonUnchecked, L["Shared_ArticleLearningStatusUnengaged"])
            };

}