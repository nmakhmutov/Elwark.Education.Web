@using Education.Web.Client.Features.History.Services.Learner.Model.Quiz
@if (string.IsNullOrEmpty(Tooltip))
{
    <MudChip
        Class="ma-0"
        Size="Size.Small"
        Color="Color.Secondary"
        Variant="Variant.Text"
        Icon="@EduIcons.Quiz"
        IconColor="@Color"
        Text="@NumberOfQuizzes.Succeeded.ToString()"
        Link="@Href"
        DisableRipple
        Label/>
}
else
{
    <MudTooltip Text="@Tooltip">
        <MudChip
            Class="ma-0"
            Size="Size.Small"
            Color="Color.Secondary"
            Variant="Variant.Text"
            Icon="@EduIcons.Quiz"
            IconColor="@Color"
            Text="@NumberOfQuizzes.Succeeded.ToMetric()"
            Link="@Href"
            DisableRipple
            Label/>
    </MudTooltip>
}

@code {

    [Parameter, EditorRequired]
    public NumberOfQuizzesModel NumberOfQuizzes { get; set; } = default!;

    [Parameter, EditorRequired]
    public Color Color { get; set; }

    [Parameter]
    public string? Tooltip { get; set; }

    [Parameter]
    public string? Href { get; set; }

}