<div class="card rounded pa-3">
    <div class="d-flex justify-center ma-6">
        <MudIcon Class="icon" Icon="@EduIcons.InventoryStore" Color="Color.Primary"/>
    </div>
    
    <MudButton
        Href="@Href"
        Color="Color.Primary"
        Variant="Variant.Filled"
        Size="Size.Medium"
        DisableElevation>
        @L["Shared_InventoryStore"]
    </MudButton>
</div>

@code {

    [Inject]
    private IStringLocalizer<App> L { get; set; } = default!;

    [Parameter, EditorRequired]
    public string? Href { get; set; }

}