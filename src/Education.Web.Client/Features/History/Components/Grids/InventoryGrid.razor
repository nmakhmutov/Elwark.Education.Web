@typeparam T

<section class="grid @Class">
    @foreach (var inventory in Inventory)
    {
        @ChildContent?.Invoke(inventory)
    }

    @if (!string.IsNullOrEmpty(StoreHref))
    {
        <InventoryStoreCard Href="@StoreHref"/>
    }
</section>

@code {

    [Parameter, EditorRequired]
    public IEnumerable<T> Inventory { get; set; } = Enumerable.Empty<T>();

    [Parameter]
    public RenderFragment<T>? ChildContent { get; set; }

    [Parameter]
    public string? Class { get; set; }

    [Parameter]
    public string? StoreHref { get; set; }

}