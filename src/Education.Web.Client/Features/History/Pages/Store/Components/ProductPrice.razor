<div class="@Class">
    @if (Price.Discount > 0)
    {
        <div class="d-flex align-center">
            <MudIcon
                Class="mr-1"
                Color="Color.Error"
                Icon="@Icons.Material.Outlined.Discount"
                Style="width: 15px; height: 15px"/>
            <MudText Typo="Typo.caption">
                -@Price.Discount%
            </MudText>
        </div>
        <div class="d-flex align-center gap-1">
            <MudIcon Icon="@EduIcons.Scroll" Style="width: 15px; height: 15px"/>
            <MudText Typo="Typo.body1">
                @Price.Total.Amount
            </MudText>
            <MudText Class="align-self-start mud-text-secondary" Typo="Typo.caption">
                <s>@Price.Original.Amount.ToMetric()</s>
            </MudText>
        </div>
    }
    else
    {
        <InternalMoney
            Currency="@Price.Total.Currency"
            Amount="@Price.Total.Amount"
            Typo="Typo.subtitle1"
            IconSize="Size.Medium"
            Horizontal/>
    }
</div>

@code {

    [Parameter, EditorRequired]
    public required Product.PriceModel Price { get; set; }

    [Parameter]
    public string? Class { get; set; }

}