<section class="@_class">
    <div class="image">
        @Image
    </div>
    <div class="name">
        @Name
    </div>
    <div class="points">
        @Points
    </div>
    @if (Additional is not null)
    {
        <div class="additional">
            @Additional
        </div>
    }
</section>

@code {
    private string? _class;

    [Parameter]
    public RenderFragment? Image { get; set; }

    [Parameter]
    public RenderFragment? Name { get; set; }

    [Parameter]
    public RenderFragment? Points { get; set; }

    [Parameter]
    public RenderFragment? Additional { get; set; }

    [Parameter]
    public bool Highlight { get; set; }

    [Parameter]
    public bool Transparent { get; set; }

    [Parameter]
    public bool DisableHover { get; set; }

    [Parameter]
    public string? Class { get; set; }

    protected override void OnParametersSet() =>
        _class = CssBuilder.Default("d-flex align-center gap-3 pa-3")
            .AddClass(Transparent ? null : Highlight ? "highlight-paper" : "mud-paper")
            .AddClass("hover", !DisableHover)
            .AddClass(Class)
            .Build();

}