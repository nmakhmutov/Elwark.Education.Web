@page "/history/my/assignments"
@layout HistoryLayout
@attribute [Authorize]

<PageTitle>
    @L["Assignments_Title"]
</PageTitle>

<EduContainer Class="py-3 py-sm-6" MaxWidth="EduWidth.W1920">
    <EduPageHeader Title="@L["Assignments_Title"]" Breadcrumbs="@Breadcrumbs"/>
</EduContainer>

<ApiViewer Result="@_result" Context="data">
    <EduContainer Class="pb-3 pb-sm-6" MaxWidth="EduWidth.W1920">
        <div class="grid">
            <div class="content">
                <MudTabs Elevation="0" Rounded Centered>
                    <PrePanelContent>
                        <div class="mb-3 mb-sm-6"></div>
                    </PrePanelContent>

                    <ChildContent>
                        <MudTabPanel Text="Daily">
                            <QuestRewardsCard
                                Class="mb-3"
                                Title="@L["Rewards_Title"]"
                                Subtitle="Complete all daily missions"
                                Status="@data.DailyAssignments.Status"
                                ExpiresAt="@data.DailyAssignments.ExpiresAt"
                                OnStart="@StartDailyQuestsAsync"
                                OnCollect="@CollectDailyQuestsAsync"
                                OnExpired="@OnInitializedAsync"/>
                            
                            @foreach (var quest in data.DailyAssignments.Assignments)
                            {
                                <QuestProgressCard Class="mb-3" Quest="@quest"/>
                            }
                        </MudTabPanel>
                        
                        <MudTabPanel Text="Weekly">
                            <QuestRewardsCard
                                Class="mb-3"
                                Title="@L["Rewards_Title"]"
                                Subtitle="Complete all weekly missions"
                                Status="@data.WeeklyAssignments.Status"
                                ExpiresAt="@data.WeeklyAssignments.ExpiresAt"
                                OnStart="@StartWeeklyQuestsAsync"
                                OnCollect="@CollectWeeklyQuestsAsync"
                                OnExpired="@OnInitializedAsync"/>
                            
                            @foreach (var quest in data.WeeklyAssignments.Assignments)
                            {
                                <QuestProgressCard Class="mb-3" Quest="@quest"/>
                            }
                        </MudTabPanel>
                    </ChildContent>
                </MudTabs>
            </div>

            <div class="sidebar">
                <DailyBonusCard
                    Bonus="@data.DailyBonus"
                    OnClaim="@ClaimDailyBonusAsync"
                    OnReject="@RejectDailyBonusAsync"
                    OnReached="@OnInitializedAsync"/>
            </div>
        </div>
    </EduContainer>
</ApiViewer>