@using Education.Web.Client.Features.History.Services.User.Model
@using Education.Web.Client.Features.Customer

<section class="card @Class">
    <header class="card-header"></header>

    <section class="d-flex px-3 px-sm-6">
        <img class="avatar rounded-circle" src="@Customer.Image" alt="@Customer.Name" loading="lazy"/>
        <MudText Class="pt-1" Typo="Typo.h5">
            @Customer.Name
        </MudText>
    </section>

    <UserLevelProgress
        Class="pa-3 pa-sm-6"
        Level="@Level.Rank"
        Experience="@Level.Experience"
        Threshold="@Level.Threshold"/>

    <MudDivider/>

    <section class="d-flex justify-center gap-3 pa-3 pa-sm-6">
        <MudButton
            DisableElevation
            FullWidth
            StartIcon="@Icons.Material.Outlined.Home"
            Variant="Variant.Filled"
            Color="Color.Primary"
            Href="@HistoryUrl.Root">
            @L["Home"]
        </MudButton>

        <MudButton
            DisableElevation
            FullWidth
            StartIcon="@Icons.Material.Outlined.AccountCircle"
            Variant="Variant.Outlined"
            Color="Color.Primary"
            Href="@CustomerUrl.Root">
            @L["Account_Title"]
        </MudButton>
    </section>

</section>

@code {

    [Inject]
    private IStringLocalizer<App> L { get; set; } = default!;

    [CascadingParameter]
    public CustomerState Customer { get; set; } = default!;

    [Parameter, EditorRequired]
    public LevelModel Level { get; set; } = default!;

    [Parameter]
    public string? Class { get; set; }

}