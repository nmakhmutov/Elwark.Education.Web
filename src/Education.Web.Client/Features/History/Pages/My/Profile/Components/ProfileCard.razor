@using Education.Web.Client.Features.Customer
<section class="card @Class">
    <header class="card-header"></header>

    <section class="card-content px-3 px-sm-6">
        <img class="avatar rounded-circle" src="@Customer.Image" alt="@Customer.Name" loading="lazy"/>
        <h5 class="mud-typography mud-typography-h5 one-line-text pt-1" title="@Customer.Name">
            @Customer.Name
        </h5>
        <span>
            <MudLink Typo="Typo.subtitle2" Href="@CustomerUrl.Root">
                @L["Account_Title"]
            </MudLink>
        </span>
    </section>

    @ChildContent
</section>

@code {

    [Inject]
    private IStringLocalizer<App> L { get; init; } = default!;

    [Parameter, EditorRequired]
    public required CustomerState Customer { get; set; }

    [Parameter]
    public RenderFragment? ChildContent { get; set; }

    [Parameter]
    public string? Class { get; set; }

}