@using ApexCharts
@using Education.Web.Client.Features.History.Services.User.Model
@using Education.Web.Client.Features.History.Services.User.Model.Quiz

<section class="mud-paper pa-3 pa-sm-6 @Class">
    <MudText Typo="Typo.h5">
        @Title
    </MudText>
    <ApexChart @ref="@_chart" TItem="QuizzesStatisticsModel.ProgressModel" Options="_options">
        <ApexPointSeries
            TItem="QuizzesStatisticsModel.ProgressModel"
            Items="Activities"
            Name="@L["Shared_QuizzesEasy"]"
            Stroke="@(new SeriesStroke { Width = 3, Color = Colors.Blue.Lighten3 })"
            SeriesType="SeriesType.Area"
            XValue="@(e => e.Date.ToString(DateFormat))"
            YValue="@(x => x.Easy)"/>

        <ApexPointSeries
            TItem="QuizzesStatisticsModel.ProgressModel"
            Items="Activities"
            Name="@L["Shared_QuizzesHard"]"
            Stroke="@(new SeriesStroke { Width = 3, Color = Colors.Blue.Lighten1 })"
            SeriesType="SeriesType.Area"
            XValue="@(e => e.Date.ToString(DateFormat))"
            YValue="@(x => x.Hard)"/>

        @* <ApexPointSeries *@
        @*     TItem="StatisticsModel.ProgressModel" *@
        @*     Items="Activities" *@
        @*     Name="@L["History_EventGuessersSmall"]" *@
        @*     Stroke="@(new SeriesStroke { Width = 3, Color = Colors.Orange.Lighten3 })" *@
        @*     SeriesType="SeriesType.Area" *@
        @*     XValue="@(e => e.Date.ToString(DateFormat))" *@
        @*     YValue="@(x => x.EventGuesser.Small)"/> *@
        @* *@
        @* <ApexPointSeries *@
        @*     TItem="StatisticsModel.ProgressModel" *@
        @*     Items="Activities" *@
        @*     Name="@L["History_EventGuessersMedium"]" *@
        @*     Stroke="@(new SeriesStroke { Width = 3, Color = Colors.Orange.Lighten1 })" *@
        @*     SeriesType="SeriesType.Area" *@
        @*     XValue="@(e => e.Date.ToString(DateFormat))" *@
        @*     YValue="@(x => x.EventGuesser.Medium)"/> *@
        @* *@
        @* <ApexPointSeries *@
        @*     TItem="StatisticsModel.ProgressModel" *@
        @*     Items="Activities" *@
        @*     Name="@L["History_EventGuessersLarge"]" *@
        @*     Stroke="@(new SeriesStroke { Width = 3, Color = Colors.Orange.Darken2 })" *@
        @*     SeriesType="SeriesType.Area" *@
        @*     XValue="@(e => e.Date.ToString(DateFormat))" *@
        @*     YValue="@(x => x.EventGuesser.Large)"/> *@
    </ApexChart>
</section>

@code {
    private ApexChart<QuizzesStatisticsModel.ProgressModel>? _chart;

    private ApexChartOptions<QuizzesStatisticsModel.ProgressModel> _options = new()
    {
        Legend = new Legend
        {
            Position = LegendPosition.Top
        },
        Chart = new Chart
        {
            Width = "100%",
            Height = "350px",
            Background = "transparent",
            ForeColor = "var(--mud-palette-text-primary)"
        },
        Grid = new Grid
        {
            BorderColor = "var(--mud-palette-divider)"
        },
        Theme = new Theme()
    };

    [Inject]
    private IStringLocalizer<App> L { get; set; } = default!;

    [CascadingParameter]
    private CascadingTheme? ThemeProvider { get; set; }

    [Parameter]
    public string? Class { get; set; }

    [Parameter]
    public string? Title { get; set; }

    [Parameter]
    public string DateFormat { get; set; } = "dd MMM";

    [Parameter, EditorRequired]
    public QuizzesStatisticsModel.ProgressModel[] Activities { get; set; } = Array.Empty<QuizzesStatisticsModel.ProgressModel>();

    protected override Task OnParametersSetAsync()
    {
        var current = ThemeProvider is { IsDarkMode: true } ? Mode.Dark : Mode.Light;
        if (_options.Theme.Mode == current)
            return Task.CompletedTask;

        _options.Theme.Mode = current;
        return _chart is null ? Task.CompletedTask : _chart.RenderAsync();
    }

}