@page "/history/quizzes"
@layout HistoryLayout
@attribute [Authorize]

<PageTitle>
    @L["Quizzes_Title"]
</PageTitle>

<EduContainer Class="py-3 py-sm-6" MaxWidth="EduWidth.None">
    <PageBreadcrumbsHeader Items="@Breadcrumbs"/>
</EduContainer>

<ApiViewer Result="@_result" OnReloadClick="@OnInitializedAsync" Context="model">
    <section class="grid px-3 pb-3 px-sm-6 pb-sm-6">
        <section class="builder">
            <MudText Class="mb-3" Typo="Typo.h6">
                @L["History_Epoch_Title"]
            </MudText>
            <EpochRadioGroup
                Class="mb-3 mb-sm-6"
                SelectedEpoch="@_settings.Epoch"
                SelectedEpochChanged="@OnEpochChanged"/>

            <MudText Class="mb-3" Typo="Typo.h6">
                @L["Quiz_Type_Title"]
            </MudText>
            <QuizDifficultyRadioGroup
                Class="mb-3 mb-sm-6"
                SelectedDifficulty="@_settings.Difficulty"
                SelectedDifficultyChanged="@OnDifficultyChanged"
                Quizzes="@model.Quizzes"/>

            <div class="d-flex justify-center">
                <LoadingButton
                    DisableElevation
                    Color="Color.Primary"
                    Variant="Variant.Filled"
                    Size="Size.Large"
                    Text="@L["Quiz_TakeTheQuiz"]"
                    LoadingText="@L["Loading_Title"]"
                    IsLoading="@_isLoading"
                    Disabled="@(model.Quizzes.All(x => !x.IsAllowed))"
                    OnClick="@CreateQuizAsync"/>
            </div>
        </section>

        <section class="inventory">
            <MudText Typo="Typo.h6" Class="mb-3">
                @L["Quiz_Equipment_Title"]
            </MudText>
            <InventoryGrid Inventory="@model.Inventories" StoreHref="@HistoryUrl.Store.Index(CategoryType.Quiz)" Context="item">
                <InventoryInfoCard
                    Title="@item.Title"
                    Overview="@item.Overview"
                    Quantity="@item.Quantity"
                    IconUrl="@item.ImageUrl"/>
            </InventoryGrid>
        </section>
    </section>
</ApiViewer>