@page "/history"
@using Education.Web.Client.Features.History.Services.Article.Request
@using Education.Web.Client.Features.History.Services.Course.Request
@layout HistoryLayout

<PageTitle>
    @L["History_Title"]
</PageTitle>

<EduContainer Class="py-3 py-sm-6" MaxWidth="@EduWidth.W1600">
    <UnderlinedTitle
        Class="mb-6"
        Title="@L["Articles_Trending_Title"]"
        Href="@HistoryUrl.Content.Articles(GetArticlesRequest.SortType.Trending)"
        HrefTitle="@L["Button_ViewAll"]"/>

    <TrendingArticles/>
</EduContainer>

<EduContainer Class="py-3 py-sm-6" MaxWidth="@EduWidth.W1600">
    <UnderlinedTitle
        Class="mb-6"
        Title="@L["Courses_Trending_Title"]"
        Href="@HistoryUrl.Content.Courses(GetCourseRequest.SortType.Trending)"
        HrefTitle="@L["Button_ViewAll"]"/>

    <TrendingCourses/>
</EduContainer>

<div></div>

@code {

    [Inject]
    private IStringLocalizer<App> L { get; set; } = default!;

}