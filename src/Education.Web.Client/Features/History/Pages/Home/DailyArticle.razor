@using Education.Web.Client.Features.History.Services
<div class="grid @Class">
    <div class="image">
        <img src="@Article.ThumbnailUrl" alt="@Article.Title" loading="lazy"/>
    </div>
    <article class="text">
        <MudText Class="mb-12" Typo="Typo.subtitle1" Color="Color.Default">
            <em>
                From today's featured article
            </em>
        </MudText>

        <ContentRating 
            Class="d-flex align-center my-3" 
            Rating="@Article.Rating" 
            Size="Size.Small" 
            ShowTooltip/>

        <MudLink Class="mb-3" Href="@HistoryUrl.Content.Article(Article.Id)" Typo="Typo.h2" Color="Color.Inherit">
            @Article.Title
        </MudLink>

        <MudText Class="mb-6" Typo="Typo.subtitle1">
            @Article.Overview
        </MudText>

        <MudButton
            Link="@HistoryUrl.Content.Article(Article.Id)"
            Variant="Variant.Filled"
            Color="Color.Primary"
            DisableElevation>
            @L["Shared_ButtonDetails"]
        </MudButton>
    </article>
</div>

@code {

    [Inject]
    private IStringLocalizer<App> L { get; set; } = default!;

    [Parameter]
    public ArticleOverviewModel Article { get; set; } = default!;

    [Parameter]
    public string? Class { get; set; }

}