@using Education.Web.Client.Models.Content

<section class="@Class">
    <MudText Class="mb-3" Typo="Typo.h5">
        @L["Course_Details_Title"]
    </MudText>

    <div class="d-flex justify-space-between align-center border-b mud-border-lines-default pb-1 mb-2">
        <MudText Typo="Typo.body1">@L["Course_Learners_Title"]</MudText>
        <div class="d-flex align-center gap-1">
            <MudText Typo="Typo.body1">@Learners.ToMetric()</MudText>
            <MudIcon Icon="@Icons.Material.Outlined.People" Size="Size.Small"/>
        </div>
    </div>

    <div class="d-flex justify-space-between align-center">
        <MudText Typo="Typo.body1">@L["ContentRating_Title"]</MudText>
        <ContentRating Rating="@Rating" Size="Size.Small" Placement="Placement.Right" ShowTooltip/>
    </div>
</section>

@code {

    [Inject]
    private IStringLocalizer<App> L { get; set; } = default!;

    [Parameter, EditorRequired]
    public ContentRatingModel Rating { get; set; } = default!;

    [Parameter]
    public uint Learners { get; set; }

    [Parameter]
    public string? Class { get; set; }

}