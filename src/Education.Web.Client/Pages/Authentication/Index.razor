@page "/authentication/{action}"
@layout MainLayout

<EduPage Title="Authentication">
    <RemoteAuthenticatorView Action="@Action" OnLogInSucceeded="@CustomerStateProvider.InitAsync">
        <LoggingIn>
            <Spinner/>
        </LoggingIn>
        <CompletingLoggingIn>
            <Spinner/>
        </CompletingLoggingIn>
        <LogOut>
            <Spinner/>
        </LogOut>
    </RemoteAuthenticatorView>
</EduPage>

@code {

    [Inject]
    private CustomerStateProvider CustomerStateProvider { get; set; } = default!;

    [Parameter]
    public string? Action { get; set; }

}