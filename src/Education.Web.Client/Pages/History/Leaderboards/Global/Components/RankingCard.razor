<MudCard Elevation="0" Class="d-flex flex-column justify-space-between">
    <MudCardContent Class="pa-3 pa-sm-6">
        <div class="d-flex justify-center mb-3">
            <div class="avatar">
                <div class="badge position-@Rank">@Rank</div>
                <MudAvatar Style="width: 96px; height: 96px" Image="@Image" Alt="@Name"/>
            </div>
        </div>
        <MudText Typo="Typo.h6" Align="Align.Center">
            @Name
        </MudText>
    </MudCardContent>
    <MudCardActions Class="d-flex justify-space-between pa-3 pa-sm-6">
        <MudStack Row AlignItems="AlignItems.Center" Spacing="0">
            <MudIcon Icon="@EduIcons.Level" Class="green-text text-darken-1 mr-3"/>
            <MudText Typo="Typo.h6">
                @Level
            </MudText>
        </MudStack>
        <MudStack Row AlignItems="AlignItems.Center" Spacing="0">
            <MudIcon Icon="@EduIcons.Experience" Class="mr-3"/>
            <ReadableNumber Value="@Experience" Typo="Typo.h6"/>
        </MudStack>
    </MudCardActions>
</MudCard>

@code {

    [Parameter]
    public string? Class { get; set; }

    [Parameter, EditorRequired]
    public uint Rank { get; set; }

    [Parameter, EditorRequired]
    public string Name { get; set; } = string.Empty;

    [Parameter, EditorRequired]
    public string Image { get; set; } = string.Empty;

    [Parameter, EditorRequired]
    public uint Level { get; set; }

    [Parameter, EditorRequired]
    public ulong Experience { get; set; }

}
