@using Education.Web.Client.Services.History
<div class="grid @Class">
    <div class="image">
        <img src="@Article.ThumbnailUrl" alt="@Article.Title" loading="lazy"/>
    </div>
    <article class="text">
        <MudText Typo="Typo.subtitle1" Color="Color.Default" Class="mb-12">
            <em>
                From today's featured article
            </em>
        </MudText>

        <MudText Typo="Typo.h2" Color="Color.Inherit" Class="mb-3">
            @Article.Title
        </MudText>

        <ArticleRating Rating="@Article.Rating" ShowDetails Class="d-flex align-center my-3"/>

        <MudText Typo="Typo.subtitle1" Class="mb-6">
            @Article.Overview
        </MudText>

        <MudButton
            DisableElevation
            Variant="Variant.Filled"
            Color="Color.Primary"
            Link="@HistoryUrl.Content.Article(Article.Id)">
            @L["Button:Read"]
        </MudButton>
    </article>
</div>

@code {

    [Inject]
    private IStringLocalizer<App> L { get; set; } = default!;

    [Parameter]
    public ArticleOverviewModel Article { get; set; } = default!;

    [Parameter]
    public string? Class { get; set; }

}