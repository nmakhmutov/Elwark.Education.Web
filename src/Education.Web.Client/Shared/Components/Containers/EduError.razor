<EduContainer Class="@Class" MaxWidth="EduWidth.W600">
    <div class="d-flex gap-3 align-center justify-center mb-3">
        <MudText Typo="Typo.h3">
            @Error.Status
        </MudText>

        <MudText Typo="Typo.h5">
            @Error.Title
        </MudText>
    </div>

    @if (!string.IsNullOrEmpty(Error.Detail))
    {
        <MudText Class="mb-3" Typo="Typo.subtitle1" Align="Align.Center">
            @Error.Detail
        </MudText>
    }

    <div class="d-flex justify-center gap-3">
        <MudButton
            DisableElevation
            Variant="Variant.Filled"
            Color="Color.Primary"
            Link="@EduUrl.Root">
            @L["Button_GoToHome"]
        </MudButton>

        @if (Error.Status > 499)
        {
            <MudButton
                DisableElevation
                Variant="Variant.Outlined"
                Color="Color.Primary"
                OnClick="@(() => Navigation.NavigateTo(Navigation.Uri, true))">
                @L["Button_Reload"]
            </MudButton>
        }
    </div>
</EduContainer>

@code {

    [Inject]
    private NavigationManager Navigation { get; set; } = default!;

    [Inject]
    private IStringLocalizer<App> L { get; set; } = default!;

    [Parameter, EditorRequired]
    public Error Error { get; set; } = default!;

    [Parameter]
    public string? Class { get; set; }

}