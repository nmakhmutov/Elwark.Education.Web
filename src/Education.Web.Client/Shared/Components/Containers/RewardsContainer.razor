@using Education.Web.Client.Models
<EduContainer Class="@Class" MaxWidth="@MaxWidth">
    <h2 class="title">
        <span>@L["Rewards"]</span>
    </h2>
    <MudStack Row Justify="Justify.Center">
        @foreach (var reward in Rewards)
        {
            <MudPaper Elevation="0" Class="d-flex align-center justify-center" Style="width: 120px; height: 120px">
                <InternalMoney
                    Currency="@reward.Currency"
                    Amount="@reward.Amount"
                    IconSize="Size.Large"
                    Typo="Typo.h4"/>
            </MudPaper>
        }
    </MudStack>
</EduContainer>

@code {

    [Inject]
    public IStringLocalizer<App> L { get; set; } = default!;

    [Parameter]
    public string? Class { get; set; }

    [Parameter]
    public EduWidth MaxWidth { get; set; } = EduWidth.None;

    [Parameter, EditorRequired]
    public InternalMoneyModel[] Rewards { get; set; } = Array.Empty<InternalMoneyModel>();

}