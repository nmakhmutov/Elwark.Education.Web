<EduContainer Class="@Class" MaxWidth="@MaxWidth">
    <h2 class="title">
        <span>@L["Rewards_Title"]</span>
    </h2>
    <section class="d-flex justify-center gap-3 gap-sm-6">
        @foreach (var reward in Rewards)
        {
            <div class="reward mud-paper d-flex align-center justify-center">
                <InternalMoney
                    Currency="@reward.Currency"
                    Amount="@reward.Amount"
                    IconSize="Size.Large"
                    Typo="Typo.h4"/>
            </div>
        }
    </section>
</EduContainer>

@code {

    [Inject]
    private IStringLocalizer<App> L { get; init; } = default!;

    [Parameter]
    public string? Class { get; set; }

    [Parameter]
    public EduWidth MaxWidth { get; set; } = EduWidth.None;

    [Parameter, EditorRequired]
    public InternalMoneyModel[] Rewards { get; set; } = Array.Empty<InternalMoneyModel>();

}