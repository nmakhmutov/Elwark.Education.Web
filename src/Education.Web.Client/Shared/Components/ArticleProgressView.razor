<div class="@Class">
    <div class="d-flex justify-space-between mb-3">
        <div class="d-flex align-center mr-3">
            <MudIcon Icon="@EduIcons.Quiz" Size="Size.Small" Class="mr-3"/>
            <MudText Typo="Typo.body2">
                @L["Shared_NumberOfPassedQuizzes"]
            </MudText>
        </div>
        <MetricNumber Value="@PassedQuizzes" Typo="Typo.body2"/>
    </div>
    <div class="d-flex justify-space-between">
        <div class="d-flex align-center mr-3">
            <MudIcon Icon="@EduIcons.TimeSpent" Size="Size.Small" Class="mr-3"/>
            <MudText Typo="Typo.body2">
                @L["TimeSpent:Total"]
            </MudText>
        </div>
        <MudText Typo="Typo.body2">
            @TimeSpent.Humanize()
        </MudText>
    </div>
</div>

@code {

    [Inject]
    private IStringLocalizer<App> L { get; set; } = default!;

    [Parameter]
    public string? Class { get; set; }

    [Parameter, EditorRequired]
    public ulong PassedQuizzes { get; set; }

    [Parameter, EditorRequired]
    public TimeSpan TimeSpent { get; set; }

}