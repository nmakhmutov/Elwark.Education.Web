<MudTooltip Text="@(IsBookmarked ? L["Bookmark:Remove"] : L["Bookmark:Add"])">
    <MudToggleIconButton
        Class="@Class"
        Toggled="@IsBookmarked"
        ToggledChanged="@OnBookmarkChanged"
        Icon="@Icons.Material.Outlined.BookmarkAdd"
        Color="Color.Default"
        Size="@Size"
        ToggledSize="@Size"
        ToggledIcon="@Icons.Material.Outlined.BookmarkAdded"
        ToggledColor="Color.Error"/>
</MudTooltip>

@code {

    [Inject]
    private IStringLocalizer<App> L { get; set; } = default!;

    [Parameter, EditorRequired]
    public string ArticleId { get; set; } = string.Empty;

    [Parameter, EditorRequired]
    public bool IsBookmarked { get; set; }

    [Parameter, EditorRequired]
    public Func<string, Task<bool>> OnBookmarkClick { get; set; } = _ => Task.FromResult(false);

    [Parameter]
    public Size Size { get; set; } = Size.Medium;

    [Parameter]
    public string? Class { get; set; }

    private async Task OnBookmarkChanged(bool toggled) =>
        IsBookmarked = await OnBookmarkClick.Invoke(ArticleId);

}