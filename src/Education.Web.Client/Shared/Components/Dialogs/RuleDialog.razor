<MudDialog DisableSidePadding>
    <DialogContent>
        <MudContainer Style="max-height: 85vh; overflow-y: scroll">
            <StyledMarkupString Content="@Content"/>
        </MudContainer>
    </DialogContent>
</MudDialog>

@code {

    [CascadingParameter]
    MudDialogInstance MudDialog { get; set; } = default!;

    [Parameter, EditorRequired]
    public MarkupString Content { get; set; }

}