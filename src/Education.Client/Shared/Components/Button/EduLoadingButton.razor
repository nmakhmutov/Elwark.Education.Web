@inherits MudButton

<MudButton ButtonType="@ButtonType"
           Class="@Class"
           ClickPropagation="@ClickPropagation"
           Color="@Color"
           Disabled="@(Disabled || IsLoading)"
           DropShadow="@DropShadow"
           EndIcon="@EndIcon"
           FullWidth="@FullWidth"
           Href="@Href"
           HtmlTag="@HtmlTag"
           IconClass="@IconClass"
           IconColor="@IconColor"
           IconSize="@IconSize"
           OnClick="@OnClick"
           Rel="@Rel"
           Ripple="@Ripple"
           Size="@Size"
           StartIcon="@StartIcon"
           Style="@Style"
           Tag="@Tag"
           Target="@Target"
           UserAttributes="@UserAttributes"
           Variant="@Variant">

    @if (IsLoading)
    {
        <MudProgressCircular Size="Size.Small" Indeterminate/>
        @if (!string.IsNullOrEmpty(LoadingText))
        {
            <MudText Typo="Typo.button" Class="ms-2">@LoadingText</MudText>
        }
    }
    else
    {
        <MudText Typo="Typo.button">@Text</MudText>
    }

</MudButton>

@code {

    [Parameter, EditorRequired]
    public bool IsLoading { get; set; }

    [Parameter, EditorRequired]
    public string Text { get; set; } = string.Empty;

    [Parameter]
    public string? LoadingText { get; set; }

}
