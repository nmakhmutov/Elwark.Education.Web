<EduLoadingButton
    Class="@Class"
    Color="@Color"
    StartIcon="@(IsBookmarked ? Icons.Material.Outlined.BookmarkAdded : Icons.Material.Outlined.BookmarkAdd)"
    DropShadow="false"
    Ripple="false"
    FullWidth="true"
    Variant="Variant.Filled"
    OnClick="@OnClick"
    Text="@L[IsBookmarked ? "Bookmarks_Remove" : "Bookmarks_Add"]"
    IsLoading="@_isLoading"/>

@code {
    private bool _isLoading;

    [Inject]
    private IStringLocalizer<App> L { get; init; } = default!;

    [Parameter, EditorRequired]
    public required string Id { get; set; }

    [Parameter, EditorRequired]
    public required bool IsBookmarked { get; set; }

    [Parameter, EditorRequired]
    public required Func<string, Task<ApiResult<Unit>>> OnBookmarkClick { get; set; }

    [Parameter]
    public Color Color { get; set; } = Color.Default;

    [Parameter]
    public string? Class { get; set; }

    private async Task OnClick()
    {
        _isLoading = true;
        try
        {
            var response = await OnBookmarkClick.Invoke(Id);

            if (response.IsSuccess)
                IsBookmarked = !IsBookmarked;
        }
        finally
        {
            _isLoading = false;
        }
    }

}
