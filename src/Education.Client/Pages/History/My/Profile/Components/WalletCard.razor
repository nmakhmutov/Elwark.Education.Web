@using Education.Client.Gateways.Models.User
<MudCard Class="@($"{Class} mud-primary white-text")" Elevation="0">
    <MudCardHeader Class="pb-0 px-3 pt-3 px-sm-6 pt-sm-6">
        <CardHeaderContent>
            <MudText Typo="Typo.button">
                @L["CurrentBalance"]
            </MudText>
        </CardHeaderContent>
    </MudCardHeader>
    <MudCardContent Class="pa-3 pa-sm-6">
        <div class="d-flex flex-wrap">
            <div class="d-flex flex-column align-center">
                <div class="d-flex flex-row align-center">
                    <MudIcon Style="color: #C0C0C0" Class="mr-2" Icon="@EducationIcons.Silver"/>
                    <HumanReadableText Value="@Silver" Typo="Typo.h5" Style="font-weight: 500"/>
                </div>
                <MudText Typo="Typo.caption">(@L["InternalMoney:Silver"])</MudText>
            </div>
        </div>
    </MudCardContent>
</MudCard>

@code {

    [Inject]
    public IStringLocalizer<App> L { get; set; } = default!;

    [Parameter, EditorRequired]
    public long Silver { get; set; }

    [Parameter]
    public string? Class { get; set; }

}
