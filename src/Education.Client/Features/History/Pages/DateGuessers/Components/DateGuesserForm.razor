<EditForm Model="@_model" OnValidSubmit="@OnValidSubmit">
    <FluentValidationValidator/>

    <div class="form">
        <MudNumericField
            @bind-Value="@_model.Year"
            For="@(() => _model.Year)"
            Label="@L["History_DateGuesser_Year"]"
            Variant="Variant.Outlined"
            Margin="Margin.Dense"
            HideSpinButtons
            AutoFocus/>

        <MudSelect
            T="uint?"
            @bind-Value="@_model.Month"
            For="@(() => _model.Month)"
            Label="@L["History_DateGuesser_Month"]"
            Variant="Variant.Outlined"
            Margin="Margin.Dense"
            Clearable>
            @foreach (var month in _months)
            {
                <MudSelectItem Value="@month.Key" T="uint?">
                    @month.Value
                </MudSelectItem>
            }
        </MudSelect>

        <MudNumericField
            @bind-Value="@_model.Day"
            For="@(() => _model.Day)"
            Label="@L["History_DateGuesser_Day"]"
            Variant="Variant.Outlined"
            Margin="Margin.Dense"
            HideSpinButtons/>

        <MudRadioGroup @bind-Value="@_model.IsCe">
            <MudRadio Value="true" Color="Color.Primary" UnCheckedColor="Color.Default">
                @L["History_Date_CE"]
            </MudRadio>
            <MudRadio Value="false" Color="Color.Primary" UnCheckedColor="Color.Default">
                @L["History_Date_BCE"]
            </MudRadio>
        </MudRadioGroup>

        <div class="submit">
            <LoadingButton
                DisableElevation
                Color="Color.Primary"
                Variant="Variant.Filled"
                Text="@L["QuestionFrom_AnswerToQuestion"]"
                LoadingText="@L["Loading_Title"]"
                ButtonType="ButtonType.Submit"
                IsLoading="@_isLoading"/>
        </div>
    </div>
</EditForm>
