@using Education.Client.Features.History.Clients.Course.Model
<section class="@Class">
    <MudText Class="mb-3" Typo="Typo.h5">
        @L["Course_Details_Title"]
    </MudText>

    <div class="d-flex justify-space-between align-center border-b mud-border-lines-default pb-1 mb-3">
        <MudText Typo="Typo.body1">@L["Course_Learners_Title"]</MudText>
        <div class="d-flex align-center gap-1">
            <MudText Typo="Typo.body1">@Details.Learners.ToMetric()</MudText>
            <MudIcon Icon="@Icons.Material.Outlined.People" Size="Size.Small"/>
        </div>
    </div>

    <div class="d-flex justify-space-between align-center border-b mud-border-lines-default pb-1 mb-3">
        <MudText Typo="Typo.body1">@L["TimeToRead_Title"]</MudText>
        <div class="d-flex align-center gap-1">
            <MudText Typo="Typo.body1">@Details.TimeToRead.Humanize(L)</MudText>
            <MudIcon Icon="@EduIcons.TimeToRead" Size="Size.Small"/>
        </div>
    </div>

    <div class="d-flex justify-space-between align-center">
        <MudText Typo="Typo.body1">@L["ContentRating_Title"]</MudText>
        <EduRating Placement="Placement.Right"
                   Stars="@Details.Rating.Stars"
                   Votes="@Details.Rating.Votes"/>
    </div>
</section>

@code {

    [Inject]
    private IStringLocalizer<App> L { get; init; } = default!;

    [Parameter, EditorRequired]
    public required CourseModel.CourseDetailsModel Details { get; set; }

    [Parameter]
    public string? Class { get; set; }

}
