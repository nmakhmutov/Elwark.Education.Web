@using Education.Client.Features.History.Clients.Product.Model
<article class="d-flex justify-center gap-1 @Class">
    <EduGameMoneyDisplay Amount="@Price.Total.Amount"
                         Currency="@Price.Total.Currency"
                         Horizontal/>

    @if (Price.Discount > 0)
    {
        <MudText Typo="Typo.button">
            <s>@Price.Original.Amount</s>
        </MudText>
    }
</article>

@code {

    [Parameter]
    public required PriceModel Price { get; set; }

    [Parameter]
    public string? Class { get; set; }

}
