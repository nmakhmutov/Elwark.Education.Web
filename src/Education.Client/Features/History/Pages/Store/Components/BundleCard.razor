@using Education.Client.Features.History.Clients.Product.Model
<section class="product mud-paper @Class">
    <header class="image">
        <img class="rounded object-cover object-center fluid w-100" src="@Bundle.ImageUrl" alt="@Bundle.Title" loading="lazy"/>
    </header>

    <article class="header overflow-hidden">
        <MudText Class="one-line-text" Typo="Typo.subtitle1" Title="@Bundle.Title">
            @Bundle.Title
        </MudText>
        <MudText Class="overview mud-text-secondary" Typo="Typo.body2">
            @Bundle.Overview
        </MudText>
    </article>

    <PriceTag Price="@Bundle.Selling"/>

    <footer class="footer">
        @ChildContent
    </footer>
</section>

@code {

    [Parameter, EditorRequired]
    public required Product.BundleModel Bundle { get; set; }

    [Parameter]
    public RenderFragment? ChildContent { get; set; }

    [Parameter]
    public string? Class { get; set; }

}
