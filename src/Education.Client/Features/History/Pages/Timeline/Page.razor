@page "/history/timeline"
@layout HistoryLayout

<PageTitle>
    @L["History_Timeline_Title"]
</PageTitle>

<div class="mud-paper d-flex justify-center align-center gap-3 gap-sm-6 pb-3">
    <MudIconButton Icon="@Icons.Material.Outlined.ArrowBack" OnClick="@OnPreviousYearClick"/>
    <MudButton Variant="Variant.Text" Color="Color.Default" DisableElevation OnClick="@OnYearClick">
        <div class="d-flex align-end gap-3">
            <MudText Typo="Typo.h2">
                @Math.Abs(Year)
            </MudText>
            <MudText Class="mud-text-secondary" Typo="Typo.subtitle1">
                @L[Year > 0 ? "History_Date_CE" : "History_Date_BCE"]
            </MudText>
        </div>
    </MudButton>
    <MudIconButton Icon="@Icons.Material.Outlined.ArrowForward" OnClick="@OnNextYearClick"/>
</div>

<ApiViewer Result="@_result" OnReloadClick="@OnParametersSetAsync" Context="result">
    <section class="grid">
        @foreach (var item in result.Items)
        {
            <TimelineArticleCard Model="@item"/>
        }
    </section>
</ApiViewer>