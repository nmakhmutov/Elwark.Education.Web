@page "/history"
@using Education.Client.Features.History.Clients.Article.Request
@using Education.Client.Features.History.Clients.Course.Request
@layout HistoryLayout

<PageTitle>
    @L["History_Title"]
</PageTitle>

<EduContainer Class="py-3 py-sm-6" MaxWidth="@EduWidth.W1600">
    <MudText Typo="Typo.h1" Align="Align.Center">
        @L["History_Title"]
    </MudText>

    <MudToolBar Class="justify-center gap-3 gap-sm-6">
        <MudButton Href="@HistoryUrl.Content.Courses()" Color="Color.Inherit" Variant="Variant.Text">
            @L["Courses_Title"]
        </MudButton>
        <MudButton Href="@HistoryUrl.Content.Articles()" Color="Color.Inherit" Variant="Variant.Text">
            @L["Articles_Title"]
        </MudButton>
        <MudButton Href="@HistoryUrl.Content.Empires" Color="Color.Inherit" Variant="Variant.Text">
            @L["History_Empires_Title"]
        </MudButton>
        <MudButton Href="@HistoryUrl.Content.Timeline" Color="Color.Inherit" Variant="Variant.Text">
            @L["History_Timeline_Title"]
        </MudButton>
    </MudToolBar>
</EduContainer>

<EduContainer Class="py-3 py-sm-6" MaxWidth="@EduWidth.W1600">
    <UnderlinedTitle Class="mb-3 mb-sm-6" Title="@L["History_Epochs_Title"]"/>
    <EpochSlider/>
</EduContainer>

<EduContainer Class="py-3 py-sm-6" MaxWidth="@EduWidth.W1600">
    <UnderlinedTitle
        Class="mb-6"
        Title="@L["Articles_Trending_Title"]"
        Href="@HistoryUrl.Content.Articles(GetArticlesRequest.SortType.Trending)"
        HrefTitle="@L["Button_ViewAll"]"/>

    <TrendingArticles/>
</EduContainer>

<EduContainer Class="py-3 py-sm-6" MaxWidth="@EduWidth.W1600">
    <UnderlinedTitle
        Class="mb-6"
        Title="@L["Courses_Trending_Title"]"
        Href="@HistoryUrl.Content.Courses(GetCourseRequest.SortType.Trending)"
        HrefTitle="@L["Button_ViewAll"]"/>

    <TrendingCourses/>
</EduContainer>

<div></div>

@code {

    [Inject]
    private IStringLocalizer<App> L { get; init; } = default!;

}