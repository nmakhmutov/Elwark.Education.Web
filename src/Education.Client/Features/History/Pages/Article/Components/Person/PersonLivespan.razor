<div class="d-flex justify-center justify-md-space-around align-center">
    <div>
        <MudText Class="text-transform-uppercase" Typo="Typo.body2">
            @L["History_Person_Born"]
        </MudText>
        <HistoryDate Class="date" Typo="Typo.h4" Date="@Born" Color="Color.Secondary"/>
        <MudText Typo="Typo.body2">
            @Born?.Place
        </MudText>
    </div>

    @if (Born is not null && Died is not null)
    {
        <MudText Class="mx-3 mx-sm-6" Typo="Typo.h2" Color="Color.Secondary">&#8212;</MudText>
    }

    <div>
        <MudText Class="text-transform-uppercase" Typo="Typo.body2">
            @L["History_Person_Died"]
        </MudText>
        <HistoryDate Class="date" Typo="Typo.h4" Date="@Died" Color="Color.Secondary"/>
        <MudText Typo="Typo.body2">
            @Died?.Place
        </MudText>
    </div>
</div>

@code {

    [Inject]
    private IStringLocalizer<App> L { get; init; } = default!;

    [Parameter, EditorRequired]
    public required PersonBirthdayModel? Born { get; set; }

    [Parameter, EditorRequired]
    public required PersonBirthdayModel? Died { get; set; }

}