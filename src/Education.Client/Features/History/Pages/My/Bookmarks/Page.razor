@page "/history/my/bookmarks"
@layout HistoryLayout
@attribute [Authorize]

<PageTitle>
    @_localizer["Bookmarks_Title"]
</PageTitle>

<EduContainer Class="py-3 py-sm-6" MaxWidth="EduWidth.W1920">
    <PageBreadcrumbsHeader Items="@_breadcrumbs"/>
</EduContainer>

<EduContainer Class="pb-3 pb-sm-6" MaxWidth="EduWidth.W1920">
    <MudTabs Elevation="0" TabHeaderClass="mb-3 mb-sm-6" Rounded>
        <Header>
            <BookmarksToolbar @bind-Filter="@_filter"/>
        </Header>
        <ChildContent>
            <MudTabPanel Text="@_localizer["Bookmarks_Catalog_Articles"]">
                <ArticleBookmarks Sort="@_filter.Sort"/>
            </MudTabPanel>
            <MudTabPanel Text="@_localizer["Bookmarks_Catalog_Courses"]">
                <CourseBookmarks Sort="@_filter.Sort"/>
            </MudTabPanel>
        </ChildContent>
    </MudTabs>
</EduContainer>
