@using ApexCharts
@using Education.Client.Features.History.Clients.Learner.Model.DateGuesser
<ApexChart @ref="@_chart" TItem="DateGuesserProgressModel" Options="_options">
    <ApexPointSeries
        TItem="DateGuesserProgressModel"
        Items="Activities"
        Name="@L["History_DateGuessers_Small"]"
        Stroke="@(new SeriesStroke { Width = 2, Color = HistoryChart.DateGuesser.Size.Small })"
        SeriesType="SeriesType.Area"
        XValue="@(x => Customer.Humanize(x.Date, DateStyle))"
        YValue="@(x => x.Small)"/>

    <ApexPointSeries
        TItem="DateGuesserProgressModel"
        Items="Activities"
        Name="@L["History_DateGuessers_Medium"]"
        Stroke="@(new SeriesStroke { Width = 2, Color = HistoryChart.DateGuesser.Size.Medium })"
        SeriesType="SeriesType.Area"
        XValue="@(x => Customer.Humanize(x.Date, DateStyle))"
        YValue="@(x => x.Medium)"/>

    <ApexPointSeries
        TItem="DateGuesserProgressModel"
        Items="Activities"
        Name="@L["History_DateGuessers_Large"]"
        Stroke="@(new SeriesStroke { Width = 2, Color = HistoryChart.DateGuesser.Size.Large })"
        SeriesType="SeriesType.Area"
        XValue="@(x => Customer.Humanize(x.Date, DateStyle))"
        YValue="@(x => x.Large)"/>
</ApexChart>

@code {
    private ApexChart<DateGuesserProgressModel>? _chart;

    private ApexChartOptions<DateGuesserProgressModel> _options = new()
    {
        Legend = new Legend
        {
            Position = LegendPosition.Top
        },
        Chart = new Chart
        {
            Width = "100%",
            Height = "350px",
            Background = "transparent",
            ForeColor = "var(--mud-palette-text-primary)"
        },
        Grid = new Grid
        {
            BorderColor = "var(--mud-palette-divider)"
        },
        Theme = new Theme()
    };

    [Inject]
    private IStringLocalizer<App> L { get; init; } = default!;

    [CascadingParameter]
    private CascadingTheme? ThemeProvider { get; set; }

    [CascadingParameter]
    private CustomerState Customer { get; set; } = default!;

    [Parameter]
    public DateStyle DateStyle { get; set; }

    [Parameter, EditorRequired]
    public required DateGuesserProgressModel[] Activities { get; set; }

    protected override Task OnParametersSetAsync()
    {
        var current = ThemeProvider is { IsDarkMode: true } ? Mode.Dark : Mode.Light;
        if (_options.Theme.Mode == current)
            return Task.CompletedTask;

        _options.Theme.Mode = current;
        return _chart is null ? Task.CompletedTask : _chart.UpdateOptionsAsync(false, false, false);
    }

}
