@using Education.Client.Features.History.Clients.User.Model
<MudTable
    T="MoneyActivityModel"
    Items="@Activities.OrderByDescending(x => x.Day)"
    Breakpoint="Breakpoint.Xs"
    Elevation="0"
    Bordered="false"
    Hover>
    <HeaderContent>
        <MudTh></MudTh>
        <MudTh>
            @L["GameMoney_Income_Title"]
        </MudTh>
        <MudTh>
            @L["GameMoney_Expense_Title"]
        </MudTh>
        <MudTh>
            @L["GameMoney_Balance_Title"]
        </MudTh>
    </HeaderContent>
    <RowTemplate>
        <MudTd>
            @Customer.Humanize(context.Day)
        </MudTd>
        <MudTd DataLabel="@L["GameMoney_Income_Title"]">
            @context.Income
        </MudTd>
        <MudTd DataLabel="@L["GameMoney_Expense_Title"]">
            @context.Expense
        </MudTd>
        <MudTd DataLabel="@L["GameMoney_Balance_Title"]">
            @context.Balance
        </MudTd>
    </RowTemplate>
</MudTable>

@code {

    [Inject]
    private IStringLocalizer<App> L { get; init; } = default!;

    [CascadingParameter]
    private CustomerState Customer { get; init; } = default!;

    [Parameter, EditorRequired]
    public required MoneyActivityModel[] Activities { get; set; }

}
