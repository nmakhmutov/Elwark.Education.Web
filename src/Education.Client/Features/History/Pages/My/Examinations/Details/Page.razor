@page "/history/my/examinations/{test}"
@layout HistoryLayout
@attribute [Authorize]

<PageTitle>
    @_title
</PageTitle>

<EduContainer Class="py-3 py-sm-6" MaxWidth="EduWidth.W1920">
    <PageBreadcrumbsHeader Items="@Breadcrumbs"/>
</EduContainer>

<ApiViewer Result="@_result" OnReloadClick="@OnInitializedAsync" Context="result">
    <EduContainer Class="pb-3 pb-sm-6">
        <StatisticDetailsGrid>
            <StatisticDetailsCard DisableActivity="@(result.Progress.Length == 0)">
                <TotalContent>
                    <Subheader Title="@L["Examinations_Title"]" Subtitle="@L["Statistics_ForAllTime"]"/>
                    <NumberOfExaminationsChart Value="@result.NumberOfExaminations"/>
                </TotalContent>
                <ProgressContent>
                    <Subheader Title="@L["User_Progress_Title"]" Subtitle="@result.Delta.RangeTitle()"/>
                    <ProgressList Items="@result.Delta.NumberOfExaminations.GetProgress(L)"/>
                </ProgressContent>
                <ActivityContent>
                    <Subheader Title="@L["User_Activities_Title"]" Subtitle="@result.Delta.RangeTitle()"/>
                    <NumberOfTestDailyProgressChart Progress="@_progress"/>
                </ActivityContent>
            </StatisticDetailsCard>

            <StatisticDetailsCard DisableActivity="@(result.Progress.Length == 0)">
                <TotalContent>
                    <Subheader Title="@L["Score_Title"]" Subtitle="@L["Statistics_ForAllTime"]"/>
                    <ExaminationScoreChart Score="@result.Score"/>
                </TotalContent>
                <ProgressContent>
                    <Subheader Title="@L["User_Progress_Title"]" Subtitle="@result.Delta.RangeTitle()"/>
                    <ProgressList Items="@result.Delta.Score.GetProgress(L)"/>
                </ProgressContent>
                <ActivityContent>
                    <Subheader Title="@L["User_Activities_Title"]" Subtitle="@result.Delta.RangeTitle()"/>
                    <ScoreDailyProgressChart Progress="@_progress"/>
                </ActivityContent>
            </StatisticDetailsCard>

            <StatisticDetailsCard DisableActivity="@(result.Progress.Length == 0)">
                <TotalContent>
                    <Subheader Title="@L["Questions_Title"]" Subtitle="@L["Statistics_ForAllTime"]"/>
                    <ExaminationAnswerRatioChart AnswerRatio="@result.AnswerRatio"/>
                </TotalContent>
                <ProgressContent>
                    <Subheader Title="@L["User_Progress_Title"]" Subtitle="@result.Delta.RangeTitle()"/>
                    <ProgressList Items="@result.Delta.AnswerRatio.GetProgress(L)"/>
                </ProgressContent>
                <ActivityContent>
                    <Subheader Title="@L["User_Activities_Title"]" Subtitle="@result.Delta.RangeTitle()"/>
                    <AnswerRatioDailyProgressChart Progress="@_progress"/>
                </ActivityContent>
            </StatisticDetailsCard>

            <StatisticDetailsCard DisableActivity="@(result.Progress.Length == 0)">
                <TotalContent>
                    <Subheader Title="@L["TimeSpent_Title"]" Subtitle="@L["Statistics_ForAllTime"]"/>
                    <ExaminationTimeSpentChart Value="@result.TimeSpent"/>
                </TotalContent>
                <ProgressContent>
                    <Subheader Title="@L["User_Progress_Title"]" Subtitle="@result.Delta.RangeTitle()"/>
                    <ProgressList Items="@result.Delta.TimeSpent.GetProgress(L)"/>
                </ProgressContent>
                <ActivityContent>
                    <Subheader Title="@L["User_Activities_Title"]" Subtitle="@result.Delta.RangeTitle()"/>
                    <TimeSpentDailyProgressChart Progress="@_progress"/>
                </ActivityContent>
            </StatisticDetailsCard>
        </StatisticDetailsGrid>
    </EduContainer>
</ApiViewer>
