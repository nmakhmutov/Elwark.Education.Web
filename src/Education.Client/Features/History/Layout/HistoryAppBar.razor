<MudAppBar Class="px-3 px-sm-6" ToolBarClass="gap-3" Elevation="0" DisableGutters>
    <MudIconButton aria-label="@L["Sidebar_ToggleMenu"]"
                   Color="Color.Inherit"
                   Edge="Edge.Start"
                   Icon="@Icons.Material.Outlined.Menu"
                   OnClick="@OnDrawerClick"/>

    <MudLink Class="d-none d-sm-block" Href="@HistoryUrl.Root" Typo="Typo.h5" Color="Color.Default" Underline="Underline.None">
        @L["History_Title"] <sup class="mud-typography mud-typography-caption mud-primary-text">beta</sup>
    </MudLink>

    <MudSpacer/>

    <HistorySearchBar/>

    <AppbarNotifications/>

    <EduThemeSwitcher/>

    <AppbarUserMenu/>
</MudAppBar>

@code {

    [Inject]
    private IStringLocalizer<App> L { get; init; } = default!;

    [Parameter]
    public EventCallback OnDrawerClick { get; set; }

}
