<header class="@_classes">
    <h2>
        @Title
    </h2>

    @if (!string.IsNullOrEmpty(Href))
    {
        <MudLink Typo="Typo.subtitle1" Href="@Href">
            @HrefTitle
        </MudLink>
    }
</header>

@code {
    string? _classes;

    [Parameter, EditorRequired]
    public required string Title { get; set; }

    [Parameter]
    public string? Class { get; set; }

    [Parameter]
    public string? Href { get; set; }

    [Parameter]
    public string? HrefTitle { get; set; }

    protected override void OnParametersSet() =>
        _classes = CssBuilder
            .Default("title")
            .AddClass("d-flex align-center justify-space-between", !string.IsNullOrEmpty(Href))
            .AddClass(Class)
            .Build();

}
