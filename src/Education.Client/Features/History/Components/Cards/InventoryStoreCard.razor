<div class="card rounded h-100 pa-3">
    <div class="d-flex flex-grow-1 justify-center align-center">
        <MudIcon Class="icon" Icon="@EduIcons.Store" Color="Color.Primary"/>
    </div>

    <MudButton
        Href="@Href"
        Color="Color.Primary"
        Variant="Variant.Filled"
        Size="Size.Medium"
        Ripple="false"
        DropShadow>
        @L["InventoryStore_Title"]
    </MudButton>
</div>

@code {

    [Inject]
    private IStringLocalizer<App> L { get; init; } = default!;

    [Parameter, EditorRequired]
    public string? Href { get; set; }

}
