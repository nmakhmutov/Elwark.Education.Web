<section class="mud-paper d-flex flex-column pa-3 @Class">
    <div class="mud-background rounded-lg relative mb-3">
        <div class="d-flex justify-center align-center px-6 @(Quantity.HasValue ? "py-6" : "py-9")">
            <img class="image" src="@IconUrl" alt="@Title" loading="lazy"/>
        </div>
        @if (Quantity.HasValue)
        {
            <MetricNumber Value="@Quantity.Value" Typo="Typo.subtitle2" Align="Align.Center"/>
        }
    </div>

    @if (!string.IsNullOrEmpty(Subtitle))
    {
        <MudText Class="one-line-text mud-text-secondary" Typo="Typo.caption" Title="@Subtitle">
            @Subtitle
        </MudText>
    }

    <header class="d-flex justify-space-between align-center gap-3">
        <MudText Class="one-line-text" Typo="Typo.body1" Title="@Title">
            @Title
        </MudText>

        <InfoTooltip Title="@Title" Description="@Overview"/>
    </header>


    @ChildContent
</section>

@code {

    [Parameter, EditorRequired]
    public string? Title { get; set; }

    [Parameter]
    public string? Subtitle { get; set; }

    [Parameter, EditorRequired]
    public string? Overview { get; set; }

    [Parameter, EditorRequired]
    public string? IconUrl { get; set; }

    [Parameter]
    public uint? Quantity { get; set; }

    [Parameter]
    public string? Class { get; set; }

    [Parameter]
    public RenderFragment? ChildContent { get; set; }

}
