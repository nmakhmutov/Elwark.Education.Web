@using Education.Client.Gateways.History
@using Education.Client.Gateways.Models.Content

<section class="card">
    <header class="card-header">
        <a href="@Links.History.TopicById(Topic.Id)">
            <img src="@Topic.Image" alt="@Topic.Title" loading="lazy"/>
        </a>
        <div class="rating-container">
            <RatingStars Rating="@Topic.Rating" ShowTooltip="true"/>
        </div>
    </header>
    <aside class="d-flex align-center justify-space-between px-3">
        <MudChip Label="true" Class="ma-0" Size="Size.Small" Color="Color.Primary" Link="@Links.History.TopicByEpoch(Topic.Epoch)">
            @L[$"History:{Topic.Epoch}"]
        </MudChip>

        <FavoriteToggleButton
            IsFavorite="@UserActivity.IsFavorite"
            TopicId="@Topic.Id"
            OnFavoriteClick="@OnFavoriteClick"/>
    </aside>

    <article class="px-3">
        <MudLink Href="@Links.History.TopicById(Topic.Id)" Typo="Typo.h6">
            @Topic.Title
        </MudLink>
        <MudText Typo="Typo.body2" Class="pt-3">
            @Topic.Overview
        </MudText>
    </article>

    <section class="progress">
        <TopicProgressView PassedTests="@UserActivity.PassedTests" TimeSpent="@UserActivity.TimeSpent" Class="px-3" />
    </section>
</section>

@code {

    [Inject]
    private IStringLocalizer<App> L { get; set; } = default!;

    [Parameter, EditorRequired]
    public HistoryTopicSummary Topic { get; set; } = default!;

    [Parameter, EditorRequired]
    public UserActivitySummary UserActivity { get; set; } = default!;

    [Parameter]
    public Func<string, Task<bool>> OnFavoriteClick { get; set; } = _ => Task.FromResult(false);

}
