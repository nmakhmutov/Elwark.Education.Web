<div class="d-inline-flex flex-wrap align-center gap-3 @Class">
    @foreach (var reward in Rewards)
    {
        <RewardDisplay Reward="@reward" Typo="@Typo" IconSize="@IconSize" Horizontal/>
    }
</div>

@code {

    [Parameter, EditorRequired]
    public required IEnumerable<Reward> Rewards { get; set; }

    [Parameter]
    public string? Class { get; set; }

    [Parameter]
    public Typo Typo { get; set; } = Typo.subtitle1;

    [Parameter]
    public Size IconSize { get; set; } = Size.Small;

    [Parameter]
    public bool Horizontal { get; set; }

}
