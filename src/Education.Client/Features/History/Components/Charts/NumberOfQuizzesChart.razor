@using ApexCharts
@using Education.Client.Features.History.Clients.Learner.Model.Quiz
<div class="@Class">
    <ApexChartContainer>
        <ApexChart TItem="Data" Options="@Options">
            <ApexPointSeries
                TItem="Data"
                Items="@Series"
                SeriesType="SeriesType.Donut"
                XValue="@(x => x.Name)"
                YAggregate="@(x => x.Sum(e => e.Value))"/>
        </ApexChart>
    </ApexChartContainer>

    <ChartList Items="@Items"/>
</div>

@code {

    private static ApexChartOptions<Data> Options =>
        new()
        {
            Chart = new Chart
            {
                Background = "transparent",
                ForeColor = "var(--mud-palette-text-primary)"
            },
            Stroke = new Stroke
            {
                Show = false
            },
            Legend = new Legend
            {
                Show = false
            },
            Colors =
            [
                HistoryChart.Quiz.Completeness.Successful,
                HistoryChart.Quiz.Completeness.Failed,
                HistoryChart.Quiz.Completeness.TimeExceeded,
                HistoryChart.Quiz.Completeness.MistakesExceeded
            ]
        };

    [Inject]
    private IStringLocalizer<App> L { get; init; } = default!;

    [Parameter]
    public string? Class { get; set; }

    [Parameter, EditorRequired]
    public required NumberOfQuizzesModel Value { get; set; }

    private ChartList.Item[] Items =>
    [
        new ChartList.Item(L["NumberOfQuizzes_Successful_Title"], Value.Succeeded, HistoryChart.Quiz.Completeness.Successful),
        new ChartList.Item(L["NumberOfQuizzes_Failed_Title"], Value.Failed, HistoryChart.Quiz.Completeness.Failed),
        new ChartList.Item(L["NumberOfQuizzes_TimeExceeded_Title"], Value.TimeExceeded, HistoryChart.Quiz.Completeness.TimeExceeded),
        new ChartList.Item(L["NumberOfQuizzes_MistakesExceeded_Title"], Value.MistakesExceeded, HistoryChart.Quiz.Completeness.MistakesExceeded),
        new ChartList.Item(L["NumberOfQuizzes_Total_Title"], Value.Total, null)
    ];

    private Data[] Series =>
    [
        new Data(L["NumberOfQuizzes_Successful_Title"], Value.Succeeded),
        new Data(L["NumberOfQuizzes_Failed_Title"], Value.Failed),
        new Data(L["NumberOfQuizzes_TimeExceeded_Title"], Value.TimeExceeded),
        new Data(L["NumberOfQuizzes_MistakesExceeded_Title"], Value.MistakesExceeded)
    ];

    private sealed record Data(string Name, decimal Value);

}
