<article class="mud-paper d-flex flex-column gap-3 pa-3 pa-sm-6">
    <MudText Typo="Typo.h5" Align="Align.Center">
        @Title
    </MudText>

    @ChildContent

    <div class="d-flex align-center justify-space-between gap-3 gap-sm-6 mb-3">
        <div>
            <MudText Typo="Typo.body2">
                @AccessInventory.Title
            </MudText>
            <MudText Class="mud-text-secondary" Typo="Typo.caption">
                @L["Inventory_Required_Title"]
            </MudText>
        </div>

        <div class="d-flex justify-center align-center mud-background rounded relative pa-6">
            <img class="image" src="@AccessInventory.ImageUrl" alt="@AccessInventory.Title"/>
        </div>
    </div>

    <div class="d-flex justify-center">
        @FooterContent
    </div>
</article>

@code {

    [Inject]
    public IStringLocalizer<App> L { get; init; } = default!;

    [Parameter, EditorRequired]
    public required string Title { get; set; }

    [Parameter, EditorRequired]
    public required UserInventoryModel AccessInventory { get; set; }

    [Parameter]
    public RenderFragment? ChildContent { get; set; }

    [Parameter]
    public RenderFragment? FooterContent { get; set; }

}
