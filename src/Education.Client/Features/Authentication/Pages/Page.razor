@page "/authentication/{action}"

<PageTitle>
    Authentication
</PageTitle>

<RemoteAuthenticatorView Action="@Action" OnLogInSucceeded="@CustomerStateProvider.InitAsync">
    <LoggingIn>
        <EduSpinner/>
    </LoggingIn>
    <CompletingLoggingIn>
        <EduSpinner/>
    </CompletingLoggingIn>
    <LogOut>
        <EduSpinner/>
    </LogOut>
</RemoteAuthenticatorView>

@code {

    [Inject]
    private CustomerStateProvider CustomerStateProvider { get; init; } = default!;

    [Parameter]
    public string? Action { get; set; }

}
