@using Education.Web.Pages
@inherits LayoutComponentBase

<MudThemeProvider Theme="@ThemeService.Theme" IsDarkMode="@ThemeService.IsDarkMode"/>
<MudDialogProvider/>
<MudSnackbarProvider/>

<MudLayout>
    <MudAppBar Elevation="0">
        <MudLink Href="@CommonLinks.Root" Typo="Typo.h5" Color="Color.Default" Underline="Underline.None">
            Education <sup class="mud-typography mud-typography-caption mud-primary-text">beta</sup>
        </MudLink>
        <MudSpacer/>
        <MudIconButton Icon="@ThemeService.Icon" Color="Color.Inherit" OnClick="@ThemeService.ToggleAsync" Class="mr-3"/>
        <AppbarUserMenu/>
    </MudAppBar>

    @Body

</MudLayout>

@code {

    [Inject]
    private ThemeService ThemeService { get; set; } = default!;

}
