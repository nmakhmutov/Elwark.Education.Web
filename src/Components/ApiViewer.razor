@typeparam T

@switch (Response.Status)
{
    case ResponseStatus.Loading when Loading is null:
        <PageSpinner/>
        break;

    case ResponseStatus.Loading when Loading is not null:
        @Loading
        break;

    case ResponseStatus.Fail:
        <PageTitle>@Response.Error.Title</PageTitle>
        <ErrorContainer Error="Response.Error"/>
        break;

    case ResponseStatus.Success:
        @ChildContent(Response.Data)
        break;

    default:
        throw new ArgumentOutOfRangeException();
}

@code {

    [Parameter, EditorRequired]
    public ApiResponse<T> Response { get; set; } = ApiResponse<T>.Loading();

    [Parameter]
    public RenderFragment<T> ChildContent { get; set; } = default!;

    [Parameter]
    public RenderFragment? Loading { get; set; }

}