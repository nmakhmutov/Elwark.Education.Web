<MudMainContent Class="d-flex flex-column h-100">
    <main class="d-flex flex-column flex-grow-1">
        @ChildContent
    </main>

    @if (ShowFooter)
    {
        <MudDivider/>
        
        <EduContainer MaxWidth="EduWidth.W1440">
            <footer class="d-flex flex-wrap align-center justify-space-between gap-3">
                <MudText Typo="Typo.subtitle1">
                    &copy; @DateTime.Now.Year Elwark
                </MudText>
                <img src="https://res.cloudinary.com/elwark/image/upload/v1613019539/Elwark/primary/60x60_eonbge.png"
                     alt="Elwark"
                     loading="lazy"
                     style="width: 40px; height: 40px"/>
            </footer>
        </EduContainer>
    }
</MudMainContent>


@code {

    [Parameter]
    public RenderFragment? ChildContent { get; set; }

    [Parameter]
    public bool ShowFooter { get; set; }

}
