<MudMainContent Class="d-flex flex-column h-100">
    <main class="d-flex flex-column flex-grow-1">
        @ChildContent
    </main>

    @if (ShowFooter)
    {
        <EduFooter/>
    }
</MudMainContent>


@code {

    [Parameter]
    public RenderFragment? ChildContent { get; set; }

    [Parameter]
    public bool ShowFooter { get; set; } = true;

}