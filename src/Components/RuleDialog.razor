<MudDialog DisableSidePadding>
    <DialogContent>
        <MudContainer Style="max-height: 85vh; overflow-y: scroll">
            <EduMarkdown Content="@Content"/>
        </MudContainer>
    </DialogContent>
</MudDialog>

@code {

    [CascadingParameter]
    MudDialogInstance MudDialog { get; set; } = default!;

    [Parameter, EditorRequired]
    public string Content { get; set; } = string.Empty;

}
